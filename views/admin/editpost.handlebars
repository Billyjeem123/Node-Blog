<div class=''>
  <div class='card-header'>Create Post</div>

  <div class='card-body'>
    <form action='/admin/updatepost/{{post._id}}' method='POST'>
      <div class='form-group'>
        <label for=''>Title</label>
        <input name='title' value="{{post.title}}" class='form-control' type='text' aria-describedby='emailHelp'
          placeholder='Enter Text' />
      </div>

  <div class="form-group">
        <label for="status">Status</label>
        <select name="poststatus" id="poststatus" class="form-control">

       {{#select post.poststatus}}

            <option value='Published'>Published</option>
          <option value='Draft'>Draft</option>
          <option value='Private'>Private</option>

       {{/select}}

        </select>
    </div>

       <div class='form-group'>
      <img src="/uploads/{{post.file}}" alt="img" height="100px">
        <input name='files' type='file' id='files' class='form-control' />
      </div>




      <div class='form-group'>
        <label for='exampleInputPassword1'>Description</label>
        <textarea name="desc" id="desc" cols="30" class="form-control" rows="5">{{post.desc}}</textarea>
      </div>

      <div class='form-check'>
        <label for='allow_comment'>Allow comment</label>
        <input name='allow' type='checkbox' id='allow_comment' {{#if post.allow}}checked{{/if}} />
      </div>

      <button type='submit' class='btn btn-primary btn-block'>Update Post</button>
    </form>

  </div>
</div>